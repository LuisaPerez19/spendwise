<h1>Welcome to Spend wise</h1>

<div class= "list">
  <ul data-controller="position">
    <% @categories.each do |category| %>
      <li class="category-item">
        <span class="category-name"><%= category.name %></span>
        <span class="category-amount"><%= category.category_total %></span>
         <span class="category-amount"><%= link_to 'Edit', edit_category_path(category) %></span>
          <span class="category-amount "><%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn' %></span>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <h1>Total Spent: Â£<%= Category.category_sum_amount %></h1>
</div>

